{
  "name": "climate-spirals",
  "private": true,
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "comment-empty-line-before": null,
      "color-hex-length": null
    }
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "d3": true
    },
    "rules": {
      "quotes": [
        "warn",
        "double"
      ],
      "indent": [
        "error",
        2
      ]
    }
  },
  "dependencies": {
    "d3": "^3.5.17",
    "slideout": "^0.1.12",
    "mobile-detect": "^1.3.2"
  },
  "devDependencies": {
    "browser-sync": "^2.13.0",
    "browserify": "^13.0.1",
    "eslint": "^3.0.0",
    "normalize.css": "^4.1.1",
    "nunjucks": "^2.4.2",
    "stylelint": "^7.0.1",
    "stylelint-config-standard": "^11.0.0",
    "uglify-js": "^2.6.2",
    "watch": "^0.19.1",
    "watchify": "^3.7.0",
    "md5sum": "^0.9.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "browser-sync": "browser-sync start --config bs-config.js",
    "watch": "./watch.sh",
    "dev": "npm run watch & npm run browser-sync",
    "lint": "eslint *.js || true",
    "stylelint": "stylelint public/climate-spirals.css || true"
  },
  "author": "",
  "license": ""
}
